[package]
name = "it8951"
version = "0.1.0"
authors = ["Your Name <your.email@example.com>"]
edition = "2021"
rust-version = "1.70"
license = "MIT OR Apache-2.0"
description = "Rust driver for IT8951 e-paper controller"
repository = "https://github.com/yourusername/IT8951"
documentation = "https://docs.rs/it8951"
keywords = ["epaper", "eink", "display", "it8951", "waveshare"]
categories = ["embedded", "hardware-support", "no-std"]
readme = "README.md"

[dependencies]
# SPI and GPIO access
spidev = "0.6"
gpio-cdev = "0.6"

# Raspberry Pi specific (optional)
rppal = { version = "0.18", optional = true }

# Error handling
thiserror = "1.0"
anyhow = { version = "1.0", optional = true }

# Image processing
image = { version = "0.25", optional = true, default-features = false }
embedded-graphics = { version = "0.8", optional = true }

# Utilities
byteorder = "1.5"
bitflags = "2.4"

# Async support (optional)
tokio = { version = "1.0", optional = true, features = ["rt", "sync", "time"] }

# Serialization for configuration
serde = { version = "1.0", features = ["derive"], optional = true }
toml = { version = "0.8", optional = true }

# Logging
log = "0.4"

[dev-dependencies]
# Testing
criterion = { version = "0.5", features = ["html_reports"] }
mockall = "0.12"
proptest = "1.4"
env_logger = "0.11"

# Examples
clap = { version = "4.5", features = ["derive"] }
anyhow = "1.0"

[features]
default = ["std", "image-support"]

# Standard library support
std = ["spidev", "gpio-cdev"]

# Raspberry Pi support
rpi = ["rppal"]

# Image format support
image-support = ["image"]

# Graphics support
graphics = ["embedded-graphics"]

# Async support
async = ["tokio"]

# Configuration file support
config = ["serde", "toml"]

# Include all features
full = ["std", "rpi", "image-support", "graphics", "async", "config", "anyhow"]

# Hardware testing (requires actual device)
hardware-tests = []

# Virtual display for testing without hardware
virtual-display = []

[[example]]
name = "basic_display"
required-features = ["std"]

[[example]]
name = "image_display"
required-features = ["std", "image-support"]

[[example]]
name = "graphics_demo"
required-features = ["std", "graphics"]

[[example]]
name = "async_display"
required-features = ["std", "async"]

[[bench]]
name = "display_benchmark"
harness = false

[profile.release]
opt-level = 3
lto = true
codegen-units = 1

[profile.dev]
opt-level = 0
debug = true

[profile.test]
opt-level = 0
debug = true

[package.metadata.docs.rs]
all-features = true
rustdoc-args = ["--cfg", "docsrs"]

# Platform-specific dependencies
[target.'cfg(target_os = "linux")'.dependencies]
libc = "0.2"

[target.'cfg(target_arch = "arm")'.dependencies]
# ARM-specific optimizations could go here
